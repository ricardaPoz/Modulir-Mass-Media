                                </Viewbox>
                                <TextBlock Grid.Column="1" Margin="10 0 0 0" HorizontalAlignment="Left" FontWeight="Bold" VerticalAlignment="Center" FontSize="20" FontFamily="/fonts/#Ubuntu" Text="Добавление СМИ"/>
                            </Grid>
                            <Border VerticalAlignment="Top" Height="100"  Grid.Row="2" BorderBrush="#D8D8D8" BorderThickness="0 1 0 0">
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.5*"/>
                                        <RowDefinition Height="0.4*"/>
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <Border x:Name="borderNameMassMedia"  CornerRadius="10" BorderBrush="#D8D8D8" BorderThickness="2" Margin="5">
                                            <TextBox IsKeyboardFocusedChanged="textBox_IsKeyboardFocusedChanged"  x:Name="tbxNameMassMedia" FontSize="20" Background="#FCFCFC" BorderThickness="0" Margin="10 0 10 0" FontFamily="/fonts/#Ubuntu" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock IsHitTestVisible="False" Foreground="#bfbfbf" Margin="19 0 0 0" VerticalAlignment="Center" FontFamily="/fonts/#Ubuntu" Grid.Row="1" FontSize="20" Text="Наименование СМИ">
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName = tbxNameMassMedia}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    <Button x:Name="btnAddMedia" Click="btnAddMedia_Click" Margin="20 0 20 5" Style="{DynamicResource StyleButton}" Grid.Row="1" Content="Добавить СМИ"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
